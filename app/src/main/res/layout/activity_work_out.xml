<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.anoop.project_fitnessapp.WorkOut">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="10dp"
            android:id="@+id/img"
            android:src="@drawable/download"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt1"
            android:layout_marginTop="24dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img"
            android:layout_alignStart="@+id/img"
            android:layout_below="@+id/img"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:text="Start" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt1"
            android:layout_alignBottom="@+id/bt1"
            android:layout_alignEnd="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:text="Pause" />
        <TextView
            android:id="@+id/textview6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_marginTop="14dp" />
    </RelativeLayout>
</ScrollView>